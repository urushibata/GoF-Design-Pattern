package command.drawer;

import java.awt.Point;
import command.command.Command;

/**
 * @author urush_000
 *
 */
public class ColorCommand implements Command {

	// 描画対象
	protected Drawable drawable;
	// 指定色
	private int r;
	private int b;
	private int g;

	/**
	 * @param drawable DrawCanvasクラス
	 * @param position 座標
	 * コンストラクタ
	 */
	public ColorCommand(Drawable drawable, Point position) {

		System.out.println("追加メンバ変数:R:" + r + " G:" + g + " B:" + b);
		System.out.println("追加メンバ:" + this);
	}

	/**
	 * メンバ変数のdrawable<DrawCanvas>のdrawメソッド実行
	 */
	@Override
	public void execute() {
		System.out.println("実行されるDrawCommand:" + Integer.toHexString(this.hashCode()));
		drawable.draw(position.x, position.y);
	}
}