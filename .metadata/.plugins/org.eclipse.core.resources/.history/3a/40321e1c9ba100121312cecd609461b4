/**
 * 
 */
package command;

import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.awt.event.MouseEvent;
import java.awt.event.MouseMotionListener;

import javax.swing.JButton;
import javax.swing.JFrame;

import command.cmmand.MacroCommand;
import command.drawer.DrawCanvas;
import command.drawer.DrawCommand;

/**
 * @author urushibata
 *
 */
public class Main extends JFrame implements ActionListener, MouseMotionListener{

	/**
	 * 
	 */
	private static final long serialVersionUID = 6430184986003295769L;
	// •`‰æ—š—ğ
	private MacroCommand history = new MacroCommand();
	// •`‰æ—Ìˆæ
	private DrawCanvas canvas = new DrawCanvas(400, 400, history);
	// Á‹ƒ{ƒ^ƒ“
	private JButton clearButton = new JButton("clear");

	/**
	 * @param args
	 */
	public Main(String title){
		super(title);
		
	}

	/* (”ñ Javadoc)
	 * @see java.awt.event.ActionListener#actionPerformed(java.awt.event.ActionEvent)
	 */
	@Override
	public void actionPerformed(ActionEvent e) {
		if(e.getSource() == clearButton){
			history.clear();
			canvas.repaint();
		}
	}

	@Override
	public void mouseDragged(MouseEvent e) {
		Command cmd = new DrawCommand(this.canvas, e.getPoint());
		history.append(cmd);
		cmd.execute();
	}

	@Override
	public void mouseMoved(MouseEvent e) {
	}
}