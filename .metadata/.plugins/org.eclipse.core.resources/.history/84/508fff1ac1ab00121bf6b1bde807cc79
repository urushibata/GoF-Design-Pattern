package facade.pagemaker;

import java.io.File;
import java.io.FileInputStream;
import java.io.IOException;
import java.io.InputStreamReader;
import java.util.Properties;

/**
 * @author urushibata
 * @version 1.0
 */
public class Database{
	private Database(){}

	/**
	 * @param dbname
	 * @return Properties
	 * @since 1.0
	 */
	public static Properties getProperties(String dbname){
		String filename = "/facade/" + dbname + ".properties";
		Properties prop = new Properties();
		
			System.out.println(new File(filename).getPath());
			System.out.println(new File(filename).getAbsolutePath());
			try {
				System.out.println(new File(filename).getCanonicalPath());
			} catch (IOException e1) {
				// TODO 自動生成された catch ブロック
				e1.printStackTrace();
			}
		try{
			prop.load(new InputStreamReader(new FileInputStream(filename), "UTF-8"));
		}catch(IOException e){
			System.out.println("Warning: " + filename + " is not found.");
		}
		return prop;
	}
}